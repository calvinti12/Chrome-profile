{
  "manifest_version": 3,
  "name": "Profile Isolation Extension",
  "version": "1.0",
  "description": "Open isolated Chrome profiles",
  "permissions": [
    "tabs",
    "nativeMessaging",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}